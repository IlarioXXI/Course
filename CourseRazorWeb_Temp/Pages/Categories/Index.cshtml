@page
@model CourseRazorWeb_Temp.Pages.Categories.IndexModel

<h1>Category List</h1>
<div calss="container">
    <div class="row pt-4">
        <div class="col-6 pb-3">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn primary bg-primary">
                <i class="bi bi-plus-square-fill"></i>Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table talble-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.CategoriesList.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn group" role="group">
                        <a asp-page="/categories/edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                    </div>
                <td/>
                <td>
                    <div class="w-75 btn group" role="group">
                        <a asp-page="/categories/delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

