@model RoleManagmentVM


<div class="card shadow border-0 mt-4">
    
    <div class="card-header bg-primary bg-gradient m-lg-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                
                    <h2 class="py-2 text-white">Role Managment</h2>
                
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4">
            <div class="col-md-12">
                <form  class="row" method="post">
                    <input asp-for="ApplicationUser.Id" hidden />
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    
                   
                    <div class="form-floating mb-3 col-md-6">
                        <input asp-for="@Model.ApplicationUser.Name" class="form-control" placeholder="Name" />
                        <label asp-for="@Model.ApplicationUser.Name" class="text-muted"></label>
                        <span asp-validation-for="@Model.ApplicationUser.Name" class="text-danger"></span>
                       
                    </div>
                  
                   
                        <div class="form-floating mb-3 col-md-6">
                            <select asp-for="@Model.ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select">
                                <option disabled selected>--Select Role--</option>
                            </select>

                        </div>
                        <div class="form-floating mb-3 col-md-6">
                        <select asp-for="@Model.ApplicationUser.CompanyId" style="display:none" asp-items="@Model.CompanyList" class="form-select">
                                <option disabled selected>--Select Company--</option>
                            </select>
                        </div>
                    <div class="col-12">
                        <button asp-action="RoleManagement" asp-controller="User" type="submit" class="w-100 btn btn-lg btn-primary bg-gradient mb-4">Update User</button>
                    </div>
                    
                </form>
            </div>
            
                
            

        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function(){
            $('#ApplicationUser_Role').change(function(){
                var selection = $('#ApplicationUser_Role Option:Selected').text();
                if(selection=='Company'){
                    $('#ApplicationUser_CompanyId').show();
                }else{
                    $('#ApplicationUser_CompanyId').hide();
                }
            })
        })
    </script>
}